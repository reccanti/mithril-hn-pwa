{
  "name": "mithril-hn-pwa",
  "version": "0.0.1",
  "description": "A progressive web app made using the Mithril framework",
  "main": "index.js",
  "repository": "git@github.com:reccanti/mithril-hn-pwa.git",
  "author": "Ben Wilcox <reccanti@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "koa": "^2.2.0",
    "koa-router": "^7.2.0",
    "koa-static": "^3.0.0",
    "mithril": "^1.1.1",
    "mithril-node-render": "^2.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.5.2",
    "nodemon": "^1.11.0",
    "webpack": "^2.6.1"
  },
  "scripts": {
    "start": "yarn run compile & yarn run serve:dev",
    "serve:dev": "nodemon dist/server/server.js",
    "compile": "yarn run compile:client & yarn run compile:server",
    "compile:client": "webpack --config config/webpack.config.js --watch",
    "compile:server": "babel src/server -d dist/server -w"
  }
}
